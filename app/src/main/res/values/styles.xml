<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="card_photo_title">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="card_photo_description">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="photo_detail_fab">
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>


    <style name="photo_detail_name">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="photo_detail_username">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="photo_detail_description">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="photo_detail_likes">
        <item name="drawableEndCompat">@drawable/ic_heart</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
        <item name="android:scaleX">0.75</item>
        <item name="android:scaleY">0.75</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="photo_detail_tags">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="floating_card">
        <item name="cardCornerRadius">25dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="floating_card.photo_info" parent="floating_card">
    </style>


</resources>